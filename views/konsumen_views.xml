<?xml version="1.0" encoding="utf-8"?>
<odoo>
   

    <!-- res.partner inherit form view -->
    <record id="res_partner_view_id" model="ir.ui.view">
        <field name="name">res.partner.inherit.view.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <!-- Add your xpath here -->
            <field name="vat" position="replace">
                <field name="is_karyawan"/>
                <field name="is_konsumen"/>
            </field>            
        </field>
    </record>

    <!-- model.name inherit search view -->
    <record id="res_partner_inherit_search" model="ir.ui.view">
      <field name="name">res.partner.inherit.view.search</field>
      <field name="model">res.partner</field>
      <field name="inherit_id" ref="base.view_res_partner_filter"/>
      <field name="arch" type="xml">       
      <field name="parent_id" position="after">
        <filter string="Karyawan" name="karyawan" domain="[('is_karyawan', '=', True)]"/>
        <filter string="Pelanggan" name="pelanggan" domain="[('is_konsumen', '=', True)]"/>
       </field>        
      </field>      
    </record>

    <!-- res.partner action window -->
    <record id="res_partner_konsumen_action" model="ir.actions.act_window">
        <field name="name">Pelanggan</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.partner</field>
        <field name="context">{
            'search_default_pelanggan':1,
            'default_is_konsumen':True,
        }
        </field>
        <field name="view_mode">tree,form</field>
    </record>
    <!-- This Menu Item must have a parent and an action -->
    <menuitem 
        id="wedding_partner_konsumen_menu_act" 
        name="Pelanggan" 
        parent="kontak_menu_categ" 
        action="res_partner_konsumen_action" 
        sequence="20"/>

</odoo>